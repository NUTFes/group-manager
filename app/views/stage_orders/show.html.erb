<%- model_class = StageOrder -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:group_id) %>:</strong></dt>
  <dd><%= @stage_order.group_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_sunny) %>:</strong></dt>
  <dd><%= @stage_order.is_sunny %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fes_date_id) %>:</strong></dt>
  <dd><%= @stage_order.fes_date_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stage_first) %>:</strong></dt>
  <dd><%= @stage_order.stage_first %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stage_second) %>:</strong></dt>
  <dd><%= @stage_order.stage_second %></dd>
  <dt><strong><%= model_class.human_attribute_name(:time) %>:</strong></dt>
  <dd><%= @stage_order.time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:own_equipment) %>:</strong></dt>
  <dd><%= @stage_order.own_equipment %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bgm) %>:</strong></dt>
  <dd><%= @stage_order.bgm %></dd>
  <dt><strong><%= model_class.human_attribute_name(:camera_permittion) %>:</strong></dt>
  <dd><%= @stage_order.camera_permittion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:loud_sound) %>:</strong></dt>
  <dd><%= @stage_order.loud_sound %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              stage_orders_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_stage_order_path(@stage_order), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              stage_order_path(@stage_order),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
