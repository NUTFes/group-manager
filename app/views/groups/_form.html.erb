<%= simple_form_for @group, wrapper: "horizontal_form", :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.hidden_field :user_id, value: @group[:user_id] %>
  <%= f.hidden_field :fes_year_id,
      value: FesYear.where(fes_year: Time.now.year).first.id %>
  <%= f.input :name,
    hint: t(".hint_name")
  %>
  <%= f.association :group_category,
    hint: t(".hint_group_category")
  %>
  <%= f.input :activity,
    hint: t(".hint_activity")
  %>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                groups_path, :class => 'btn btn-default' %>
<% end %>
