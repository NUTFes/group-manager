<%= simple_form_for(@shop) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :tel %>
    <%= f.input :time_weekdays %>
    <%= f.input :time_sat %>
    <%= f.input :time_sun %>
    <%= f.input :time_holidays %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
