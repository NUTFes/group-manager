<%= simple_form_for @shop, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@shop[:name]) %>
  <%= f.input :tel %>
  <%= error_span(@shop[:tel]) %>
  <%= f.input :time_weekdays %>
  <%= error_span(@shop[:time_weekdays]) %>
  <%= f.input :time_sat %>
  <%= error_span(@shop[:time_sat]) %>
  <%= f.input :time_sun %>
  <%= error_span(@shop[:time_sun]) %>
  <%= f.input :time_holidays %>
  <%= error_span(@shop[:time_holidays]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                shops_path, :class => 'btn btn-default' %>
<% end %>
