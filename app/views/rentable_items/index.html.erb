<%- model_class = RentableItem -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:stocker_item) %></th>
      <th><%= model_class.human_attribute_name(:stocker_place) %></th>
      <th><%= model_class.human_attribute_name(:max_num) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @rentable_items.each do |rentable_item| %>
      <tr>
        <td><%= rentable_item.stocker_item %></td>
        <td><%= rentable_item.stocker_place %></td>
        <td><%= rentable_item.max_num %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_rentable_item_path(rentable_item), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      rentable_item_path(rentable_item),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_rentable_item_path,
            :class => 'btn btn-primary' %>
