<%= simple_form_for @stocker_item, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :rental_item_id %>
  <%= error_span(@stocker_item[:rental_item_id]) %>
  <%= f.input :stocker_place_id %>
  <%= error_span(@stocker_item[:stocker_place_id]) %>
  <%= f.input :num %>
  <%= error_span(@stocker_item[:num]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                stocker_items_path, :class => 'btn btn-default' %>
<% end %>
