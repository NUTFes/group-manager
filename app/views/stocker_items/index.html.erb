<%- model_class = StockerItem -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:rental_item) %></th>
      <th><%= model_class.human_attribute_name(:stocker_place) %></th>
      <th><%= model_class.human_attribute_name(:num) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @stocker_items.each do |stocker_item| %>
      <tr>
        <td><%= link_to stocker_item.id, stocker_item_path(stocker_item) %></td>
        <td><%= stocker_item.rental_item %></td>
        <td><%= stocker_item.stocker_place %></td>
        <td><%= stocker_item.num %></td>
        <td><%=l stocker_item.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_stocker_item_path(stocker_item), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      stocker_item_path(stocker_item),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_stocker_item_path,
            :class => 'btn btn-primary' %>
