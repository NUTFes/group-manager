<%- model_class = StockerItem -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:rental_item_id) %>:</strong></dt>
  <dd><%= @stocker_item.rental_item_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stocker_place_id) %>:</strong></dt>
  <dd><%= @stocker_item.stocker_place_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:num) %>:</strong></dt>
  <dd><%= @stocker_item.num %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              stocker_items_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_stocker_item_path(@stocker_item), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              stocker_item_path(@stocker_item),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
