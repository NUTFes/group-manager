<%= simple_form_for @purchase_list, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :food_product_id %>
  <%= error_span(@purchase_list[:food_product_id]) %>
  <%= f.input :shop_id %>
  <%= error_span(@purchase_list[:shop_id]) %>
  <%= f.input :fes_date_id %>
  <%= error_span(@purchase_list[:fes_date_id]) %>
  <%= f.input :is_fresh %>
  <%= error_span(@purchase_list[:is_fresh]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                purchase_lists_path, :class => 'btn btn-default' %>
<% end %>
