<%= simple_form_for @power_order, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :group_id %>
  <%= error_span(@power_order[:group_id]) %>
  <%= f.input :item %>
  <%= error_span(@power_order[:item]) %>
  <%= f.input :power %>
  <%= error_span(@power_order[:power]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                power_orders_path, :class => 'btn btn-default' %>
<% end %>
