<%= simple_form_for @rental_order, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :group_id %>
  <%= error_span(@rental_order[:group_id]) %>
  <%= f.input :rental_item_id %>
  <%= error_span(@rental_order[:rental_item_id]) %>
  <%= f.input :num %>
  <%= error_span(@rental_order[:num]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                rental_orders_path, :class => 'btn btn-default' %>
<% end %>
