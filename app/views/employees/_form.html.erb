<%= simple_form_for @employee, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :group_id %>
  <%= error_span(@employee[:group_id]) %>
  <%= f.input :name %>
  <%= error_span(@employee[:name]) %>
  <%= f.input :student_id %>
  <%= error_span(@employee[:student_id]) %>
  <%= f.input :employee_category_id %>
  <%= error_span(@employee[:employee_category_id]) %>
  <%= f.input :duplication %>
  <%= error_span(@employee[:duplication]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                employees_path, :class => 'btn btn-default' %>
<% end %>
