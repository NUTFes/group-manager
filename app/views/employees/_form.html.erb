<%= simple_form_for(@employee) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :group %>
    <%= f.input :name %>
    <%= f.input :student_id %>
    <%= f.association :employee_category %>
    <%= f.input :duplication %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
