<%= simple_form_for @place_order, wrapper: "horizontal_form", :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.hidden_field :group_id %>

  <%= f.input :first,
    collection: Place.collections( @place_order.group_id ),
    selected: @place_order.first %>
  <%= error_span(@place_order[:first]) %>

  <%= f.input :second,
    collection: Place.collections( @place_order.group_id ),
    selected: @place_order.second %>
  <%= error_span(@place_order[:second]) %>

  <%= f.input :third,
    collection: Place.collections( @place_order.group_id ),
    selected: @place_order.third %>
  <%= error_span(@place_order[:third]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                place_orders_path, :class => 'btn btn-default' %>
<% end %>
